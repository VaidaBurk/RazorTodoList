@model TodoModel

@using (Html.BeginForm("AddNewTodo", "Todo", FormMethod.Post))
{
    <div class="container-full" style="background-color:aliceblue">
        <div class="container p-3">
            <div class="row p-3">
                <div class="col-2">@Html.LabelFor(model => model.Name, "ToDo name:")</div>
                <div class="col-3">@Html.TextBoxFor(model => model.Name)</div>
            </div>
            <div class="row p-3">
                <div class="col-2">@Html.LabelFor(model => model.Description, "ToDo description:")</div>
                <div class="col-10">@Html.TextAreaFor(model => model.Description)</div>
            </div>
            <input class="btn btn-info ml-2" type="submit" value="Save" />
        </div>
    </div>
}

